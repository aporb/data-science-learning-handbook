# Data Science Learning Handbook - Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
POSTGRES_USER=mlflow
POSTGRES_PASSWORD=mlflow
POSTGRES_DB=mlflow
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# MLflow Configuration
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_BACKEND_STORE_URI=postgresql://mlflow:mlflow@postgres:5432/mlflow
MLFLOW_DEFAULT_ARTIFACT_ROOT=/app/mlartifacts
MLFLOW_S3_ENDPOINT_URL=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# Jupyter Configuration
JUPYTER_ENABLE_LAB=yes
JUPYTER_TOKEN=
JUPYTER_PASSWORD=

# Monitoring Configuration
PROMETHEUS_RETENTION_TIME=200h
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_SECURITY_ADMIN_PASSWORD=admin

# Cloud Storage (Optional)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
GOOGLE_APPLICATION_CREDENTIALS=
GOOGLE_CLOUD_PROJECT=

# API Keys (Optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
HUGGINGFACE_API_KEY=
WANDB_API_KEY=

# Security Configuration
SECURITY_SCAN_SCHEDULE=0 2 * * *
SECURITY_REPORT_PATH=/app/reports/security

# Development Configuration
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO

# Platform-specific configurations
ADVANA_API_KEY=
ADVANA_BASE_URL=
QLIK_SERVER_URL=
QLIK_CERT_PATH=
DATABRICKS_HOST=
DATABRICKS_TOKEN=
NAVY_JUPITER_ENDPOINT=
NAVY_JUPITER_CERT_PATH=
